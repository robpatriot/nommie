# ----------------------------
# Postgres infra (container)
# ----------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Superuser (for docker exec / psql helpers only)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# ----------------------------
# Application databases
# ----------------------------
PROD_DB=nommie
TEST_DB=nommie_test   # must end with "_test"

# ----------------------------
# Roles
# ----------------------------
# Owner role (has CREATE/ALTER privileges, used for migrations)
NOMMIE_OWNER_USER=nommie_owner
NOMMIE_OWNER_PASSWORD=change_me_owner_pw

# Application role (runtime + tests, least privileges)
APP_DB_USER=nommie_app
APP_DB_PASSWORD=change_me_app_pw

# ----------------------------
# Backend secrets
# ----------------------------
# Secret key for signing/verifying JWTs
APP_JWT_SECRET=change_me_secret

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
