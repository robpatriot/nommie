# =========================================================
# apps/frontend/.env.local.example
# This file is read automatically by Next.js during dev/build.
# Only include vars needed by the frontend (Auth.js + API base).
# =========================================================

# ---------- Public (client + server) ----------
NEXT_PUBLIC_APP_NAME=Nommie

# ---------- Backend integration ----------
# Required. Public URL for browser (WebSocket) and client bundle.
# For local dev: http://localhost:3001
# For production: https://api.yourdomain.com
NEXT_PUBLIC_BACKEND_BASE_URL=http://localhost:3001

# Optional: internal URL for server-side fe->be calls. When set, auth/JWT/API use this.
# BACKEND_BASE_URL=http://localhost:3001

# Optional explicit websocket base (falls back to NEXT_PUBLIC_BACKEND_BASE_URL with ws://)
# BACKEND_WS_URL=ws://localhost:3001

# ---------- Auth.js (NextAuth v5) Configuration ----------
# Application URL (where your frontend is hosted)
# For local dev, use: http://localhost:3000
# For production, use: https://yourdomain.com
AUTH_URL=http://localhost:3000

# Secret key for next-auth
# Generate a secure random secret: openssl rand -hex 32
# This is separate from BACKEND_JWT_SECRET - they serve different purposes:
# - AUTH_SECRET: Used by NextAuth for frontend session management
# - BACKEND_JWT_SECRET: Used by the backend for API authentication tokens
AUTH_SECRET=change-me

# Google OAuth credentials
# Get these from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID for a web application
# For local dev, add authorized redirect URI: http://localhost:3000/api/auth/callback/google
# For production, add authorized redirect URI: https://yourdomain.com/api/auth/callback/google
AUTH_GOOGLE_ID=your-google-oauth-client-id.apps.googleusercontent.com
AUTH_GOOGLE_SECRET=your-google-oauth-client-secret
