# ----------------------------
# Postgres infra (container)
# ----------------------------
# Database host (use 'localhost' for local development)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Superuser credentials (for docker exec / psql helpers only)
# For local dev, 'postgres' is acceptable, but change for any shared environment
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Default database name
POSTGRES_DB=postgres

# ----------------------------
# Application databases
# ----------------------------
# Production database name
PROD_DB=nommie

# Test database name (must end with "_test")
TEST_DB=nommie_test

# ----------------------------
# Roles
# ----------------------------
# Owner role (has CREATE/ALTER privileges, used for migrations)
# For local dev, simple passwords are acceptable
# For shared dev environments, use secure passwords
NOMMIE_OWNER_USER=nommie_owner
NOMMIE_OWNER_PASSWORD=dev-password-change-for-shared-env

# Application role (runtime + tests, least privileges)
# For local dev, simple passwords are acceptable
# For shared dev environments, use secure passwords
APP_DB_USER=nommie_app
APP_DB_PASSWORD=dev-password-change-for-shared-env



