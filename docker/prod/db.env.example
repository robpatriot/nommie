# ----------------------------
# Postgres infra (container)
# ----------------------------
# Database host
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Superuser credentials (for docker exec / psql helpers only)
# WARNING: Change these in production!
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production

# Default database name
POSTGRES_DB=postgres

# ----------------------------
# Application databases
# ----------------------------
# Production database name
PROD_DB=nommie

# Test database name (must end with "_test")
TEST_DB=nommie_test

# ----------------------------
# Roles
# ----------------------------
# Owner role (has CREATE/ALTER privileges, used for migrations)
# Generate secure password: openssl rand -hex 16
NOMMIE_OWNER_USER=nommie_owner
NOMMIE_OWNER_PASSWORD=change-me-generate-secure-password

# Application role (runtime + tests, least privileges)
# Generate secure password: openssl rand -hex 16
APP_DB_USER=nommie_app
APP_DB_PASSWORD=change-me-generate-secure-password

