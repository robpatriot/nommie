{
  "name": "nommie",
  "version": "0.1.0",
  "description": "Web-based multiplayer version of Nomination Whist",
  "private": true,
  "scripts": {
    "dev:fe": "pnpm --filter @nommie/frontend dev",
    "build:fe": "pnpm --filter @nommie/frontend build",
    "lint:fe": "pnpm --filter @nommie/frontend lint",
    "format:fe": "pnpm --filter @nommie/frontend format",

    "dev:be": "pnpm --filter backend dev",
    "build:be": "pnpm --filter backend build",
    "lint:be": "cargo clippy --manifest-path apps/backend/Cargo.toml --all-targets --all-features -- -D warnings",
    "format:be": "cargo fmt --manifest-path apps/backend/Cargo.toml --all",

    "lint": "pnpm lint:fe && pnpm lint:be",
    "format": "pnpm format:fe && pnpm format:be"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

