{
  "name": "nommie",
  "version": "0.1.0",
  "description": "Web-based multiplayer version of Nomination Whist",
  "private": true,
  "scripts": {
    "dev:fe": "pnpm --filter @nommie/frontend dev",
    "build:fe": "pnpm --filter @nommie/frontend build",
    "lint:fe": "pnpm --filter @nommie/frontend lint",
    "format:fe": "pnpm --filter @nommie/frontend format",

    "dev:be": "cargo run --manifest-path apps/backend/Cargo.toml",
    "build:be": "cargo build --manifest-path apps/backend/Cargo.toml",
    "lint:be": "cargo clippy --manifest-path apps/backend/Cargo.toml --all-targets --all-features -- -D warnings",
    "format:be": "cargo fmt --manifest-path apps/backend/Cargo.toml --all",

    "lint": "pnpm lint:fe && pnpm lint:be",
    "format": "pnpm format:fe && pnpm format:be",

    "db:up": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "db:down": "docker compose down -v",
    "db:logs": "docker compose logs -f postgres",
    "db:pg_isready": "docker exec -it nommie-postgres bash -lc 'pg_isready -U \"$POSTGRES_USER\" -d \"$POSTGRES_DB\"'",
    "db:psql": "docker exec -it nommie-postgres bash -lc 'psql -U \"$POSTGRES_USER\" -d \"$POSTGRES_DB\"'"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.5.x",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "eslint": "^8.57.0"
    }
  }
}

